<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layourMenuLateralQuemSomos"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <include layout="@layout/toolbar" />

        <RelativeLayout
            android:id="@+id/sobre_n_s"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#FFFFFF">


            <TextView
                android:id="@+id/quem_somos"
                android:layout_width="111dp"
                android:layout_height="23dp"
                android:layout_marginStart="148dp"
                android:layout_marginTop="71dp"
                android:gravity="center_horizontal|top"
                android:text="QUEM SOMOS"
                android:textAppearance="@style/quem_somos"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/pipas_foi_f"
                android:layout_width="275dp"
                android:layout_height="95dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="68dp"
                android:layout_marginTop="114dp"
                android:gravity="center_horizontal|top"
                android:text="@string/pipas_foi_f"
                android:textAppearance="@style/pipas_foi_f" />


            <View
                android:id="@+id/rectangle"
                android:layout_width="410dp"
                android:layout_height="308dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="295dp"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="0dp"
                android:background="@drawable/rectangle" />

            <TextView
                android:id="@+id/nossa_equip"
                android:layout_width="105dp"
                android:layout_height="20dp"
                android:layout_alignTop="@+id/rectangle"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="272dp"
                android:gravity="center_horizontal|top"
                android:text="@string/nossa_equip"
                android:textAppearance="@style/nossa_equip" />

        </RelativeLayout>
    </LinearLayout>


    <android.support.design.widget.NavigationView
        android:id="@+id/menu_lateral_quem_somos"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/menu_lateral_cabecalho"
        app:menu="@menu/menu_lateral" />
</android.support.v4.widget.DrawerLayout>