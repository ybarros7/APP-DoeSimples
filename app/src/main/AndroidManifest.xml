<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="br.com.pipasdevteam.doesimples">
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".FilterInstituicao"></activity>
        <activity
            android:name=".QuemSomosActivity"
            android:theme="@style/AppTheme.Toolbar" />
        <activity android:name=".SettingsActivity" />
        <activity
            android:name=".DetailInstituicaoActivity"
            android:parentActivityName=".ListaInstituicoesActivity"
            android:theme="@style/AppTheme.Toolbar" />
        <activity
            android:name=".ListaInstituicoesActivity"
            android:theme="@style/AppTheme.Toolbar" />
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".HomeActivity"
            android:theme="@style/AppTheme.Toolbar" />
    </application>

</manifest>